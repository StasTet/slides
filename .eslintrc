{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "rules": {
        "eol-last": 2,
        "semi": 1,
        "no-console": 1,
        "new-cap": 2,
        "no-use-before-define": 1,
        "quotes": [2, "single"],
        "jsx-quotes": [2, "prefer-double"],
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "newline-after-var": [2, "always"]
    },
    "extends": ["plugin:react/recommended"]
}